// -*-mode:javascript-*- vim:ft=json

// ~/.micro/settings.json
// ============================================================================
// Micro text editor configuration file.

{
    "autoclose": true,
    "autoindent": true,
    "autosave": 0,
    "autosu": true,
    "backup": true,
    "basename": false,
    "colorcolumn": 80,
    "colorscheme": "default",
    "comment": true,
    "cursorline": true,
    "diff": true,
    "diffgutter": true,
    "encoding": "utf-8",
    "eofnewline": false,
    "fastdirty": true,
    "fileformat": "unix",
    "filemanager": true,
    "filemanager.compressparent": true,
    "filemanager.foldersfirst": true,
    "filemanager.openonstart": false,
    "filemanager.showdotfiles": true,
    "filemanager.showignored": true,
    "filetype": "unknown",
    "ftoptions": true,
    "go": true,
    "go.gofmt": true,
    "go.goimports": false,
    "ignorecase": true,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": false,
    "keymenu": true,
    "linter": true,
    "literate": true,
    "manipulator": true,
    "matchbrace": true,
    "misspell": true,
    "mkparents": true,
    "mouse": true,
    "paste": false,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "readonly": false,
    "rmtrailingws": false,
    "ruler": true,
    "savecursor": false,
    "savehistory": true,
    "saveundo": false,
    "scrollbar": true,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "smartpaste": true,
    "softwrap": true,
    "splitbottom": true,
    "splitright": true,
    "status": true,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) $(status.paste)| ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "$(bind:ToggleKeyMenu): bindings, $(bind:ToggleHelp): help",
    "statusline": true,
    "sucmd": "sudo",
    "syntax": true,
    "tabmovement": true,
    "tabsize": 4,
    "tabstospaces": true,
    "useprimary": true,
    "wc": true
}
